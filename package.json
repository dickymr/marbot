{
  "name": "marbot",
  "version": "1.0.0",
  "description": "MarBot is your digital call to prayer.",
  "main": "src/index.ts",
  "scripts": {
    "start": "yarn prisma:migrate-deploy && yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "prisma:reset": "prisma migrate reset",
    "prisma:generate": "prisma generate",
    "prisma:migrate-dev": "prisma migrate dev",
    "prisma:migrate-deploy": "prisma migrate deploy",
    "prisma:migrate-status": "prisma migrate status",
    "prisma:studio": "prisma studio",
    "prepare": "husky install",
    "build": "rimraf build && tsc -p tsconfig.json"
  },
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "@types/http-status": "^1.1.2",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-status": "^1.5.3",
    "joi": "^17.7.0",
    "morgan": "^1.10.0",
    "pm2": "^5.2.2",
    "winston": "^3.8.2",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.13",
    "@types/supertest": "^2.0.12",
    "@types/xss-filters": "^0.0.27",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
